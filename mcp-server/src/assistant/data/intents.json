{
  "categories": [
    {
      "category": "greeting",
      "patterns": [
        "^(hi|hello|hey|helo|hai|apa khabar|你好|嗨|good\\s?(morning|afternoon|evening|night))",
        "^(assalamualaikum|salam|selamat\\s?(pagi|petang|malam))"
      ],
      "flags": "i",
      "enabled": true
    },
    {
      "category": "thanks",
      "patterns": [
        "\\b(thanks?|thank\\s?you|terima\\s?kasih|tq|ty|appreciate)\\b",
        "(谢谢|感谢)"
      ],
      "flags": "i",
      "enabled": true
    },
    {
      "category": "wifi",
      "patterns": [
        "\\b(wifi|wi-fi|internet|password|ssid)\\b",
        "(网络|密码|无线)"
      ],
      "flags": "i",
      "enabled": true
    },
    {
      "category": "directions",
      "patterns": [
        "\\b(direction|where|location|address|map|how\\s?to\\s?(get|go|reach|find)|google\\s?map|navigate|alamat|di\\s?mana|lokasi)\\b",
